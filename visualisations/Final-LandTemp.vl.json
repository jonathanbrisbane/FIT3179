{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Global Land Temperature Rises",
  "height": 300,
  "width": 700,
  "data": {
    "url": "https://raw.githubusercontent.com/jonathanbrisbane/FIT3179/main/data/Land_temperature_anomaly.csv"
  },
  "params": [
    {
      "name": "Temp_Above",
      "value": -1,
      "bind": {
        "input": "range",
        "min": -1,
        "max": 1,
        "step": 0.5,
        "name": "Temperature Above (째C): "
      }
    }
  ],
  "transform": [
    {"filter": "datum['Average Temperature Anomaly'] > Temp_Above"}
  ],
  "layer": [{
    "selection": {
      "brush": {
        "type": "interval",
        "encodings": ["x"]
      }  
    },
      "mark": {"type": "bar"},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "timeUnit": "year",
          "title": "Year",
          "axis": {
            "domain": false,
            "ticks": false,
            "labelAngle": 0,
            "labelPadding": 5,
            "gridColor": {
              "condition": {"test": "datum['Year'] === 0", "value": "black"},
              "value": "white"
            }
          }
        },
        "y": {
          "field": "Average Temperature Anomaly",
          "type": "quantitative",
          "title": "Mean Temperature Anomaly (째C)",
          "axis": {
            "gridColor": {
              "condition": {
                "test": "datum['Average Temperature Anomaly'] === 0",
                "value": "black"
              },
              "value": "white"
            }
          }
        },
        "color": {
          "field": "Average Temperature Anomaly",
          "title": "Temperature Change (째C)",
          "type": "quantitative",
          "legend": {
            "direction": "horizontal",
            "legendX": 250,
            "legendY": 345,
            "orient": "none"
          },
          "scale": {
            "type": "threshold",
            "domain": [-0.5, 0, 0.5, 1, 1.5],
            "range": [
              "#0571b0",
              "#92c5de",
              "#fddbc7",
              "#f4a582",
              "#ca0020",
              "darkred"
            ]
          }
        },
        "opacity": {
        "condition": {
          "selection": "brush", "value": 1
        },
        "value": 0.7},
        "tooltip": [
          {"field": "Year", "formatType": "year"},
          {
            "field": "Average Temperature Anomaly",
            "title": "Temperature Anomaly (째C)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "line-top",
        "dx": 315,
        "dy": -150,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Average Temperature Anomaly", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Average Temperature Anomaly'] > '1.5'",
            "value": 1
          },
          "value": 0
        }
      }
    },{
    "transform": [{
      "filter": {"selection": "brush"}
    }],
      "mark": "rule",
      "encoding": {
        "y": {
          "aggregate": "mean",
          "field": "Average Temperature Anomaly",
          "type": "quantitative"
        },
        "color": {"value": "green"},
        "size": {"value": 3}
      }
    }
  ],
  "config": {"font": "Georgia"}
}
