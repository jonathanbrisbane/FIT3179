{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 700,
  "height": 400,
  "title": "Percentage of Electricity Generated by Renewables, 2019",
  "projection": {"type": "naturalEarth1"},
  "data": {
    "url": "https://raw.githubusercontent.com/jonathanbrisbane/FIT3179/main/worldmap.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jonathanbrisbane/FIT3179/main/data/share-electricity-renewables.csv"
        },
        "key": "Entity",
        "fields": ["Renewables (% electricity)"]
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "grey"},
  "encoding": {
    "color": {
      "field": "Renewables (% electricity)",
      "type": "quantitative",
      "title": "Renewable Electricity %",
      "scale": {
        "type": "threshold",
        "domain": [15, 30, 45, 60, 75, 90],
        "range": [
          "#ffffcc",
          "#d9f0a3",
          "#addd8e",
          "#78c679",
          "#41ab5d",
          "#238443",
          "#005a32"
        ]
      }
    },
    "opacity": {"value": 0.9},
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {
        "field": "Renewables (% electricity)",
        "type": "quantitative",
        "title": "Renewable Electricity %",
        "format": ","
      }
    ]
  },
  "config": {"font": "Georgia"}
}
