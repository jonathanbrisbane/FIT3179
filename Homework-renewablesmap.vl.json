{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Electricity Generated by Renewable Energy",
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/jonathanbrisbane/FIT3179/main/worldmap.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jonathanbrisbane/FIT3179/main/share-electricity-renewables.csv"
        },
        "key": "Entity",
        "fields": ["Renewables (% electricity)"]
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "darkgrey"},
  "encoding": {
    "color": {
      "field": "Renewables (% electricity)",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [10, 20, 30, 40, 50, 60, 70, 80, 90],
        "scheme": "darkmulti"
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Renewables (% electricity)", "type": "quantitative"}
    ]
  },
  "config": {}
}